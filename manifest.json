{
    "manifest_version": 3,
    "name": "Old Dog New Spells",
    "description": "Replace links and tooltips to legacy spells to their updated version on D&D Beyond.",
    "version": "1.0",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "images/hello_extensions.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/monster.js"
            ],
            "matches": [
                "https://www.dndbeyond.com/monsters*",
                "https://www.dndbeyond.com/monsters/*",
                "https://www.dndbeyond.com/encounters/*"
            ],
            "run_at": "document_idle",
            "type": "module"
        }
    ]
}